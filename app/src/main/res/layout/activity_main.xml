<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F6B9B9"
    tools:context=".app.ui.context.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOpen"
        android:layout_width="171dp"
        android:layout_height="115dp"
        android:background="#2196F3"
        android:onClick="Men"
        app:cardBackgroundColor="#393737"
        app:cardCornerRadius="14dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385"
        app:layout_rowWeight="1"
        tools:ignore="SpeakableTextPresentCheck">

        <ImageView
            android:id="@+id/OpenImge"
            android:layout_width="133dp"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal"
            android:foreground="@mipmap/openwe" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tex1"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:text="@string/tex1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toTopOf="@+id/cardOpen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.648" />

    <ImageView
        android:layout_width="197dp"
        android:layout_height="177dp"
        android:layout_gravity="center_horizontal"

        android:foreground="@mipmap/evento_393_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardOpen"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>